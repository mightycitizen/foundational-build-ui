<div class="hero{% if background_image %} hero--background-image{% endif %}{% if background_color %} text-white bg-primary-800 {% endif%}{% if content_type == 'alert' %} bg-neutrals-50{% endif%} relative">
  {% if background_image %}
    <div class="inset-0 w-full h-full max-h-[600px] overflow-hidden">
      <img src="{{ background_image.src }}" alt="{{ background_image.alt }}" class="w-full h-full object-cover object-center">
    </div>
  {% endif %}
  <div class="hero--inner-wrapper pb-4 lg:pt-0">

    <div class="hero_search-form border-b pb-8 mb-8">
      <div class="container">
        <div class="mb-8 lg:mb-4{% if background_color is empty %} text-primary-500{% endif %}">
          {% include '@components/navigation/breadcrumbs/breadcrumbs.twig' with breadcrumbs %}
        </div>
        <div class="grid grid-cols-12 gap-6 items-center justify-center">
          <div class="col-span-12 md:col-span-8 md:col-start-3">
            <h2 class="text-center">Search Mighty University</h2>
            {% include '@components/forms/hero-search-form/hero-search-form.twig' %}
          </div>
        </div>
      </div>
    </div>
    <div class="container">
      <div class="grid grid-cols-12 gap-6 gap-y-8 lg:g-y-0">
        <div class="col-span-12">
          <div class="hero_content">
            <div class="grid grid-cols-12 gap-6 items-center">
              <div class="col-span-12 ">


                <h1 class="text-5xl">{{ heading }}</h1>

                <div class="flex justify-between items-center">
                  <div>
                    1 -8 of 40 search results for “phrase.”
                  </div>
                  <div>
                    {% include '@components/forms/select/select.twig' with {
                      label: "Sort By",
                      id: "dropdown",
                      input_class: "w-full",
                      name: "dropdown",
                      placeholder: 'Relevance',
                      options: [
                        {
                          label: "Dropdown A",
                          value: 0
                        },
                        {
                          label: "Dropdown B",
                          value: 1
                        },
                        {
                          label: "Dropdown C",
                          value: 2
                        }
                      ]
                    } %}
                  </div>
                </div>

                {% if subheading | default %}
                  <p class="text-2xl">{{ subheading }}</p>
                {% endif %}

                {% if summary | default %}
                  <p class="text-lg">{{ summary }}</p>
                {% endif %}

                <div class="flex flex-wrap flex-col lg:flex-row items-start lg:items-center gap-4 lg:gap-8 pb-5 lg:pb-0">
                  {% if hero_button | default %}
                    {% include '@components/links/button/button.twig' with hero_button | merge({
                      classes: 'text-lg items-center',
                      icon: 'arrow-circle-right'
                    }) only %}
                  {% endif %}

                  {% if readmore_link | default %}
                    {% include '@components/links/read-more/read-more.twig' with readmore_link | merge({
                      class: 'text-white justify-left lg:justify-center'
                    }) only %}
                  {% endif %}
                </div>
              </div>
            </div>

          </div>
        </div>

      </div>
    </div>
  </div>

{#
  hero.twig

  Props:
    - alert_message
    - alert_type
    - background_image
      - alt
      - src
    - background_color: 'light' or 'dark'
    - categories
    - content_type
    - date
    - endDate
    - eyebrow
    - heading
    - hero_button
    - image
      - alt
      - src
    - last_updated
    - links_bar_menu
      - item
        - icon
        - text
        -url
    - list
      - item
    - modifier
    - readmore_link
    - split_content: boolean
    - subheading
    - summary

  Slots:
    - breadcrumbs
    - media
#}

{% set background_color = background_color|default('light') %}

<div class="hero{% if background_image %} hero--background-image{% endif %}{% if background_color == 'dark' %} text-white bg-primary-800 {% endif%}{% if content_type == 'alert' %} bg-neutrals-50{% endif%} relative">
  {% if background_image %}
  <div class="inset-0 w-full h-full max-h-[600px] overflow-hidden">
    <img src="{{ background_image.src }}" alt="{{ background_image.alt }}" class="w-full h-full object-cover object-center">
  </div>
  {% endif %}
  <div class="hero--inner-wrapper pb-4 lg:py-11{% if background_image %} {{ background_color == 'dark' ? 'bg-primary-800' : 'bg-white' }}{% endif %}">
    <div class="container">
      <div class="grid grid-cols-12 gap-6 gap-y-8 lg:g-y-0">
        <div class="{% if content_type == 'alert' %}col-span-10{% else %}col-span-12{% endif%} md:order-3">
          <div class="hero_content">
            <div class="grid grid-cols-12 gap-6 items-center">
              <div class="col-span-12 {% if split_content | default %}md:col-span-6 order-2 md:order-1{% endif %}">
                <div class="{% if split_content | default %}mb-2{% else %}mb-8 lg:mb-4{% endif %} {% if background_color == 'light' %}text-primary-500{% endif %}">
                  {{ breadcrumbs }}
                </div>

                {% if date | default and endDate | default %}
                  {% include '@components/inline-text/meta/meta.twig' with {
                    modifier: 'mb-4',
                    date: date,
                    endDate: endDate
                  } only %}
                {% endif %}

                {% if alert_type %}
                  <div class="flex items-center gap-x-4 mb-5">
                    <span class="bg-tertiary-100 inline-block w-[40px] h-[40px] rounded-full flex items-center justify-center">
                    <i class="icon-warning-fill text-tertiary-600 text-xl"></i>
                  </span>
                    <span class="font-bold text-lg">{{ alert_type }}</span>
                    <span class="border-r-2 border-r-neutrals-900">&nbsp;</span>
                    <span class="bg-tertiary-700 text-white px-3 py-1 rounded-full text-xs">Status: {{ alert_status }}</span>
                  </div>
                {% endif %}

                {% if eyebrow | default %}
                  <p class="font-bold">{{ eyebrow }}</p>
                {% endif %}

                <h1 class="text-5xl">{{ heading }}</h1>

                {% if subheading | default %}
                  <p class="text-2xl">{{ subheading }}</p>
                {% endif %}
                {% if list | default %}
                  <ul class="list-none flex gap-4 list-divided font-bold text-sm mb-3">
                    {% for item in list %}
                      <li>{{ item }}</li>
                    {% endfor %}
                  </ul>
                {% endif %}
                {% if summary | default %}
                  <p class="text-lg">{{ summary }}</p>
                {% endif %}

                {% if last_updated %}
                  <p class="text-lg font-bold">Last Updated: {{ last_updated }}</p>
                {% endif %}
                {% if alert_message %}
                  <p class="text-lg text-neutrals-900">{{ alert_message }}</p>
                {% endif %}

                <div class="flex flex-wrap flex-col lg:flex-row items-start lg:items-center gap-4 lg:gap-8 pb-5 lg:pb-0">
                  {% if hero_button | default %}
                    {% include '@components/links/button/button.twig' with hero_button | merge({
                      classes: 'text-lg items-center',
                      icon: 'arrow-circle-right'
                    }) only %}
                  {% endif %}

                  {% if readmore_link | default %}
                    {% include '@components/links/read-more/read-more.twig' with readmore_link | merge({
                      class: 'text-white justify-left lg:justify-center'
                    }) only %}
                  {% endif %}
                </div>

                {% if categories | default %}
                  {% include '@components/inline-text/meta/meta.twig' with {
                    date: endDate | default is empty ? date : false,
                    modifier: 'mt-4',
                    categories: categories
                  } only %}
                {% endif %}
              </div>
              {% if split_content %}
                <div class="col-span-12 md:col-span-6 order-1 md:order-2 -mx-4 md:mx-0 md:pl-9">
                  {% if image | default %}
                    <img src="{{ image.src }}" alt="{{ image.alt }}" loading="lazy"/>
                  {% elseif media | default %}
                    {{ media }}
                  {% endif %}
                </div>
              {% endif %}
            </div>

          </div>
        </div>
{#        <div class="col-span-12 lg:col-span-4 md:col-span-6 md:order-2 flex md:justify-end">#}
{#          {% include '@components/utils/add2any/add2any.twig' with {#}
{#            class: 'mb-0'#}
{#          } %}#}
{#        </div>#}
      </div>
    </div>
  </div>
  {% if links_bar_menu | default %}
  <div class="links-bar {% if background_color == 'dark' %}bg-neutrals-50 text-primary-500 shadow{% else %}bg-primary-500 text-white{% endif %}">
    <div class="container">
      <ul class="menu lg:flex lg:gap-x-3 py-4 lg:py-4 space-y-3 lg:space-y-0 list-none lg:justify-between lg:text-lg items-center">
        {% for item in links_bar_menu %}
          <li class="shrink-0">
            <span class="icon-{{ item.icon }} text-xl align-middle"></span>
            <a class="no-underline hover:underline" href="{{ item.url }}">{{ item.text }}</a>
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
  {% endif %}
</div>

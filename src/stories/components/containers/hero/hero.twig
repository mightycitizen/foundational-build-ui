<div class="hero{% if background_image %} hero--background-image{% endif %}{% if background_color %} text-white bg-primary-800 {% endif%} relative">
  {% if background_image %}
  <div class="inset-0 w-full h-full max-h-[600px] overflow-hidden">
    <img src="{{ background_image.src }}" alt="{{ background_image.alt }}" class="w-full h-full object-cover object-center">
  </div>
  {% endif %}
  <div class="hero--inner-wrapper pb-4 lg:py-11">
    <div class="container">
      <div class="grid grid-cols-12 gap-6 gap-y-8 lg:g-y-0">
        <div class="col-span-12 md:order-3">
          <div class="hero_content">
            <div class="grid grid-cols-12 gap-6 items-center">
              <div class="col-span-12 {% if image | default %}md:col-span-6 order-2 md:order-1{% endif %}">
                <div class="{% if image | default %}mb-8{% else %}mb-8 lg:mb-4{% endif %}">
                  {% include '@components/navigation/breadcrumbs/breadcrumbs.twig' with breadcrumbs %}
                </div>

                {% if date | default and endDate | default %}
                  {% include '@components/inline-text/meta/meta.twig' with {
                    modifier: 'mb-4',
                    date: date,
                    endDate: endDate
                  } only %}
                {% endif %}
                <h1 class="text-5xl">{{ heading }}</h1>

                {% if subheading | default %}
                  <p class="text-2xl">{{ subheading }}</p>
                {% endif %}
                {% if list | default %}
                  <ul class="list-none flex gap-4 list-divided font-bold text-sm mb-3">
                    {% for item in list %}
                      <li>{{ item }}</li>
                    {% endfor %}
                  </ul>
                {% endif %}
                {% if summary | default %}
                  <p class="text-lg">{{ summary }}</p>
                {% endif %}

                <div class="flex flex-wrap flex-col lg:flex-row items-start lg:items-center gap-4 lg:gap-8 pb-5 lg:pb-0">
                  {% if hero_button | default %}
                    {% include '@components/links/button/button.twig' with hero_button | merge({
                      classes: 'text-lg items-center',
                      icon: 'arrow-circle-right'
                    }) only %}
                  {% endif %}

                  {% if readmore_link | default %}
                    {% include '@components/links/read-more/read-more.twig' with readmore_link | merge({
                      class: 'text-white justify-left lg:justify-center'
                    }) only %}
                  {% endif %}
                </div>

                {% if categories | default %}
                  {% include '@components/inline-text/meta/meta.twig' with {
                    date: endDate | default is empty ? date : false,
                    modifier: 'mt-4',
                    categories: categories
                  } only %}
                {% endif %}
              </div>
              {% if image | default %}
                <div class="col-span-12 md:col-span-6 order-1 md:order-2 -mx-4 md:mx-0">
                  <img src="{{ image.src }}" alt="{{ image.alt }}" loading="lazy"/>
                </div>
              {% endif %}
            </div>

          </div>
        </div>
{#        <div class="col-span-12 lg:col-span-4 md:col-span-6 md:order-2 flex md:justify-end">#}
{#          {% include '@components/utils/add2any/add2any.twig' with {#}
{#            class: 'mb-0'#}
{#          } %}#}
{#        </div>#}
      </div>
    </div>
  </div>
  <div class="links-bar {% if background_color %}bg-white text-primary-500 shadow{% else %}bg-primary-500 text-white{% endif %}">
    <div class="container">
      <ul class="menu lg:flex lg:gap-x-3 py-4 lg:py-4 space-y-3 lg:space-y-0 list-none lg:justify-between lg:text-lg items-center">
        {% for item in links_bar_menu %}
          <li class="shrink-0">
            <span class="icon-{{ item.icon }} text-xl align-middle"></span>
            <a class="no-underline hover:underline" href="{{ item.url }}">{{ item.text }}</a>
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
</div>

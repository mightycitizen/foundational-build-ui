{% if items | default %}
  <ul class="list-none">
    {% for item in items %}
      <li class="flex items-center gap-x-2 mb-2">
        {% if item.icon %}
          {{ include('atoms:icon-text', {
            icon: item.icon,
            text: item.text,
          })}}
        {% else %}
          {{ item.text }}
        {% endif %}
      </li>
    {% endfor %}
  </ul>
{% endif %}

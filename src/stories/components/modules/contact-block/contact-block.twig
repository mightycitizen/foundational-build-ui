{% embed '@components/sections/section.twig' with {
  section_class: section_class | default,
}
%}
  {% block section_content %}
    <div class="contact-block grid grid-cols-12 bg-primary-50">
      <div class="col-span-12 lg:col-span-10">
        <div class="grid grid-cols-12">
          <div class="col-span-12 md:col-span-4">
            <h2 class="text-sm">CONTACT</h2>
            <ul class="list-none space-y-6 md:space-y-11 border-l-primary-400">
              {% if contact_email | default %}
                <li class="flex text-primary-500 items-center">
                  <span class="ph ph-[at--fill] text-xl"></span><span class="font-bold">Email:</span> <a class="font-bold" href="mailto:{{ contact_email }}">{{ contact_email }}</a>
                </li>
              {% endif %}
              {% if contact_phone | default %}
                <li class="flex text-primary-500 items-center">
                  <span class="ph ph-[phone-call--fill] text-xl"></span><span class="font-bold">Phone:</span> <span class="font-bold">{{ contact_phone }}</span>
                </li>
              {% endif %}
              {% if contact_fax | default %}
                <li class="flex text-primary-500 items-center">
                  <span class="ph ph-[phone-call--fill] text-xl"></span><span class="font-bold">Fax:</span> <span class="font-bold">{{ contact_fax }}</span>
                </li>
              {% endif %}
            </ul>
          </div>
          {% if contact_locations | default %}
            <div class="col-span-12 md:col-span-4">
              <h2 class="text-sm">LOCATION</h2>
              <ul class="list-none space-y-6 md:space-y-11 border-l-primary-400">
                <li>
                  <span class="flex text-primary-500 items-center"><span class="ph ph-[map-pin-line--fill] text-xl"></span> <a class="font-bold" href="#">Location:</a></span>
                  <p>1234 Mighty Building<br/>Austin TX 78745</p>
                </li>

              </ul>
            </div>
          {% endif %}
          {% if contact_information %}
            <div class="col-span-12 md:col-span-4">
              <h2 class="text-sm">INFORMATION</h2>
              <ul class="list-none space-y-6 md:space-y-11 border-l-primary-400">
                {% for item in contact_information %}
                  <li class="flex text-primary-500 items-center">
                    <span class="ph ph-[{{ item.icon }}] text-xl"></span> <a class="font-bold" href="{{ item.url }}">{{ item.text }}</a>
                  </li>
                {% endfor %}
              </ul>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  {% endblock %}
{% endembed %}

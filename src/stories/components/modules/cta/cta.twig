{# currently uses section component but if design deviates too much may be better to create standalone #}

{% if section_button | default %}
  {% set section_button = section_button | merge({
    "modifier": "secondary"
  }) %}
{% endif %}

{% embed '@components/sections/section.twig' with {
  section_class: "cta " ~ class | default ~ (section_image | default ? ' cta--horizontal': ''),
}%}
  {% block section_content %}
    {% if block_links %}
      <section class="prose">
        {% include '@components/links/block-links/block-links.twig' %}
      </section>
    {% else %}
      {{ section_content }}
    {% endif %}
  {% endblock %}
{% endembed %}

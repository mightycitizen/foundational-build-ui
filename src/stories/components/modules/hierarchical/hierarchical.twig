{% embed '@components/sections/section.twig' with {
  padding: 'tight',
  section_class: "section--form " ~ section_class | default,
  section_style: "narrow"
} %}
  {% block section_content %}
    <div class="grid grid-cols-12 gap-6">
      <div class="col-span-6">
        {% include "@components/teasers/card/card.twig" with featured_card only %}
      </div>
      <div class="col-span-6">
        {% include '@components/listing/thumbnail-list/thumbnail-list.twig' with {
          single_column: true
        } %}
      </div>
    </div>
  {% endblock %}
{% endembed %}

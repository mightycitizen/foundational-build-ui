<div class="bg-neutrals-50 lg:shadow space-y-6 px-6 py-5">
  <div>
    <p>{{ page_title }}</p>
    {% if register_button | default %}
      {% include "@components/links/button/button.twig" with register_button %}
    {% endif %}
    {% if event_website | default %}
      <div class="pt-4">
        <span class="ph ph-[link] text-primary"></span>
        {% include "@components/links/read-more/read-more.twig" with register_button %}
      </div>
    {% endif %}
  </div>
  <div>
    <h2 class="text-lg font-semibold">Date & time</h2>
    <div>
      <span class="ph ph-[calendar-blank] text-primary"></span>
      <span>Date - {{ event_date }}</span>
    </div>
    <div>
      <span class="ph ph-[clock] text-primary"></span>
      <span>Time range ({{ event_time }})</span>
    </div>
  </div>
  <div>
    <h2 class="text-lg font-semibold">Location</h2>
    <div>
      <span class="ph ph-[map-pin] text-primary"></span>
      <span>Event Location</span>
      <div>
        {{ event_location }}
      </div>
      {% if event_directions_url | default %}
        {% include "@components/links/read-more/read-more.twig" with event_directions_url %}
      {% endif %}
    </div>
  </div>
  {% if event_virtual_meeting_url | default %}
  <div>
    <h2 class="text-lg font-semibold">Stream this event</h2>
    {% include "@components/links/read-more/read-more.twig" with event_virtual_meeting_url %}
  </div>
  {% endif %}
  <div class="text-right">
    {% include '@components/utils/add2any/add2any.twig' with {
      class: 'mb-0'
    } %}
  </div>
</div>

<div class="pt-8 space-y-6">
  {% if media_name | default %}
    <div class="media-contact border-b-[1px] border-b-neutrals-200 pb-6">
      <h2 class="text-lg font-semibold">Event contact</h2>
      <ul class="list-none space-y-2.5">
        <li>{{ media_name }}</li>
        {% if media_email | default %}
          <li><a href="mailto:{{ media_email }}">{{ media_email }}</a></li>
        {% endif %}
        {% if media_phone | default %}
          <li>{{ media_phone }}</li>
        {% endif %}
      </ul>
    </div>
  {% endif %}
  {% if event_series | default %}
  <div class="event-series border-b-[1px] border-b-neutrals-200 pb-6">
    <h2 class="text-lg font-semibold">Event Series [if appl.]</h2>
    {% include "@components/links/read-more/read-more.twig" with event_series %}
  </div>
  {% endif %}

  {% if who_its_for | default %}
    <div class="topics border-b-[1px] border-b-neutrals-200 pb-6">
      <h2 class="text-lg font-semibold">Who it's for:</h2>
      <ul class="list-none flex flex-wrap gap-2.5">
        {% for item in who_its_for %}
          <li>
            <a class="read-more" href="{{ item.url }}">{{ item.text }}</a>
          </li>
        {% endfor %}
      </ul>
    </div>
  {% endif %}

  {% if topics | default %}
    <div class="topics border-b-[1px] border-b-neutrals-200 pb-6">
      <h2 class="text-lg font-semibold">Topics</h2>
      <ul class="list-none flex flex-wrap gap-2.5">
        {% for item in topics %}
          <li>
            <a class="read-more" href="{{ item.url }}">{{ item.text }}</a>
          </li>
        {% endfor %}
      </ul>
    </div>
  {% endif %}
</div>

{% set alert_type_color = 'primary-700' %}
{% set alert_icon = 'warning-circle-fill' %}
{% set alert_icon_color = 'primary-500' %}
{% set alert_icon_bg = 'primary-100' %}

{% if alert_type == 'Emergency' %}
  {% set alert_type_color = 'tertiary-900' %}
  {% set alert_icon = 'warning-fill' %}
  {% set alert_icon_color = 'tertiary-700' %}
  {% set alert_icon_bg = 'tertiary-100' %}
{% endif %}

{% if alert_type == 'Weather' %}
  {% set alert_icon = 'cloud-lightning-fill' %}
{% endif %}

<div class="flex items-center gap-x-4 mb-3">
  <span class="bg-{{ alert_icon_bg }} inline-block w-[40px] h-[40px] rounded-full flex items-center justify-center">
    <i class="icon-{{ alert_icon }} text-{{ alert_icon_color }} text-2xl"></i>
  </span>
  <span class="font-bold text-lg text-{{ alert_type_color }}">{{ alert_type }}{% if alert_type == 'Emergency' or 'Weather' %} Alert{% endif %}</span>
</div>

<h2 class="!mt-0"><a class="text-black text-lg md:text-xl" href="{{ heading.url }}">{{ heading.text }}</a></h2>

{% if last_updated | default %}
  <p class="md:text-lg font-bold mb-4">Last Updated: {{ last_updated }}</p>
{% endif %}
{% if alert_message | default %}
  <p class="md:text-lg text-neutrals-900">{{ alert_message }}</p>
{% endif %}

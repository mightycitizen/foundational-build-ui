{#<div class="card card--horizontal shadow-md">#}
<div>
  <div class="px-8 py-8">
    <div class="grid grid-cols-12 gap-6 items-center gap-y-4">
      <div class="col-span-12 lg:col-span-7">
        <h2 class="h3">{{ heading }}</h2>
        <h3 class="text-xl">{{ subheading }}</h3>
        {% if description is not empty %}
          <p class="mb-3">{{ description }}</p>
        {% endif %}
        {% if link | default %}
          {% include '@components/links/read-more/read-more.twig' with link %}
        {% endif %}
      </div>
      {% if items | length %}
        <div class="col-span-12 lg:col-span-5">
          <div class="px-4 py-5 bg-gray-100 text-sm">
            {% include '@components/informational/listing/listing.twig' with {
            "listing_class": 'mb-0',
            "items": items
          } %}
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</div>

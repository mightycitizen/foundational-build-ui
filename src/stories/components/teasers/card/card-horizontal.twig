<div class="card card--horizontal {% if no_outline is empty | default %}shadow-lg bg-white {% endif %}{{ modifier | default }} {% if clickCard | default %}card--click{% endif %}" data-scroll-show>
  <div {% if image_position | default != 'flush' %}class="card_section {% if no_outline is empty | default %}py-8 px-8{% endif %}"{% endif %}>
    <div class="grid grid-cols-12 gap-y-4 {% if image_position | default != 'flush' %}gap-x-5 {% if var == 'short' %}lg:gap-x-0{% else %}lg:gap-x-8{% endif%} items-center{% endif %} ">
      {% if image | default %}
        <div class="col-span-12 md:col-span-5 {% if var == 'short' %}lg:col-span-3{% else %}lg:col-span-5{% endif%} {% if image.alignment | default and image.alignment == 'right' %}md:order-2{% endif %}">
          <div class="card_image {% if var != 'short' %}image-size--landscapeCroppedMedium{% endif %}">
            <img {% if lazyload_attr | default %}{{ lazyload_attr }}="{{ image.src }}"{% else %}src="{{ image.src }}" loading="lazy"{% endif %}  alt="{{ image.alt }}" class="{% if var != 'short' %}w-full{% endif %}">
          </div>
        </div>
      {% endif %}
      <div class="col-span-12 {% if image | default %}md:col-span-7 {% if var == 'short' %}lg:col-span-9{% else %}lg:col-span-7{% endif%} {% if image.alignment  | default and image.alignment == 'right' %}md:order-1{% endif %}{% endif %}">
        {% if image_position | default == 'flush' %}
          <div class="card_section py-6 px-8 flex justify-center flex-col h-full flex">
        {% endif %}
              {% include '@components/teasers/card/_card-content.twig' %}
        {% if image_position | default == 'flush' %}
          </div>

        {% endif %}

      </div>
    </div>
  </div>
</div>

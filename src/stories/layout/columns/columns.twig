{% set col_1_classes = 'md:col-span-4' %}
{% set col_2_classes = 'md:col-span-8' %}

{% if columns == 'narrow' %}
  {% set col_1_classes = 'md:col-span-4 lg:col-span-3' %}
  {% set col_2_classes = 'md:col-span-8 lg:col-span-9' %}
{% elseif columns == 'wide' %}
  {% set col_1_classes = 'md:col-span-5' %}
  {% set col_2_classes = 'md:col-span-7' %}
{% elseif columns == 'half' %}
  {% set col_1_classes = 'md:col-span-6' %}
  {% set col_2_classes = 'md:col-span-6' %}
{% endif %}

<div class="grid grid-cols-12 gap-4 md:gap-8 w-full">
  <div class="col-span-12 {{ col_1_classes }} {{ col_1_modifiers }}">
    {{ col_1 }}
  </div>
  <div class="col-span-12 {{ col_2_classes }} {{ col_2_modifiers }}">
    {{ col_2 }}
  </div>
</div>

{% if header is empty %}
  {% set header %}
    {% include "@layout/wrapper/header.twig" %}
  {% endset %}
{% endif %}

{% if footer is empty %}
  {% set footer %}
    {% include "@layout/wrapper/footer.twig" %}
  {% endset %}
{% endif %}

{% if hero_section is empty %}
  {% set hero_section %}
    {% include '@components/containers/hero/hero.twig' with hero %}
  {% endset %}
{% endif %}

{% if content is empty %}
  {% set content %}
  {% endset %}
{% endif %}

{% if sidebar is empty %}
  {% set sidebar %}
  {% endset %}
{% endif %}

{% if sidebar_bottom is empty %}
  {% set sidebar_bottom %}
  {% endset %}
{% endif %}

{% block header %}
  {{ header }}
{% endblock %}

{% if page_structure == 'full_width' %}
  {{ hero_section }}
{% endif %}

{% if full_width %}
  {# Full width content (usually made up of modules that use section.twig already) #}
  {{ content }}
{% else %}
  {% embed '@components/sections/section.twig' with {
    padding: padding,
  } %}
    {% block section_content %}
      {% if (page_structure == 'sidebar_inline') %}
        {# Hero on top of sidebar - not sure if this is used #}
        {% include '@layout/structure/content-with-sidebar.twig' %}
      {% elseif (page_structure == 'sidebar_full') %}
        {# Sidebar extends full height next to hero #}
        {% include '@layout/structure/content-pieces.twig' %}
      {% elseif (page_structure == 'sidebar_full_flex') %}
        {# Sidebar extends full height next to hero, drops to bottom of page on mobile #}
        {% include '@layout/structure/content-grid.twig' %}
      {% else %}
        {# Content in body container #}
        {{ content }}
      {% endif %}
    {% endblock %}
  {% endembed %}
{% endif %}

{% block footer %}
  {{ footer }}
{% endblock %}
